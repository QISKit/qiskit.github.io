{
  "entrypoint": "index.html",
  "shell": "src/components/app-shell.js",
  "sources": ["data/**/*", "images/**/*", "locales/**/*", "videos/**/*"],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/*.{js,js.map}",
    "node_modules/@webcomponents/webcomponentsjs/bundles/**",
    "push-manifest.json",
    "robots.txt"
  ],
  "builds": [
    {
      "name": "esm-bundled",
      "browserCapabilities": ["es2015", "modules"],
      "js": {
        "minify": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false
    },
    {
      "name": "es6-bundled",
      "browserCapabilities": ["es2015"],
      "js": {
        "compile": "es2015",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false
    },
    {
      "name": "es5-bundled",
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false
    }
  ],
  "moduleResolution": "node",
  "npm": true
}

{
  "entrypoint": "index.html",
  "shell": "src/components/app-shell.js",
  "sources": [
    "data/**/*",
    "images/**/*",
    "locales/**/*",
    "videos/**/*"
  ],
  "extraDependencies": [
    "manifest.json",
    "node_modules/@webcomponents/webcomponentsjs/**",
    "node_modules/@ibm/plex/**",
    "robots.txt",
    "Staticfile",
    "Staticfile.auth"
  ],
  "builds": [
    {
      "name": "es5-bundled",
      "js": {
        "compile": "es5",
        "minify": true,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": false
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
